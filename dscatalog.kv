
Root:   
    screen_manager: screen_manager
    orientation: 'vertical'
    BoxLayout:
        padding: '2sp'
        canvas:
            Color:
                rgba: 1, 1, 1, .6
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, None
        height: '45sp'
        Spinner:
            size_hint: None, 1
            width: '108sp'
            text: 'Select DS'
            values: [screen.name for screen in screen_manager.screens]
            on_text: root.show_kv(*args)
        
        Button:
            size_hint: None, 1
            width: '108sp'
            text: 'Render Now'
            on_release: root.change_kv(*args)

    BoxLayout:
        id: reactive_layout
        orientation: 'vertical' if self.width < self.height else 'horizontal'
        
        ScreenManager:
            id: screen_manager
            Screen:
                name: "LinkedList"
                LinkedList:
<LinkedList>:
	FloatLayout:


